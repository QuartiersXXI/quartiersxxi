<paquet
	prefix="quartiersxxi_theme"
	categorie="theme"
	version="1.0.0"
	etat="dev"
	compatibilite="[3.0.0;3.0.*]"
	logo="quartiersxxi_theme.png"
>
	<nom>Quartiers XXI : thème graphique</nom>

	<auteur lien="https://github.com/QuartiersXXI">Les contributeurices de Quartiers XXI</auteur>
	<copyright>2015</copyright>
	<licence>GPL v3</licence>
	
	<necessite nom="quartiersxxi_squelettes" compatibilite="[1.0.0;]" />
	<necessite nom="scssphp" compatibilite="[1.0.6;]" />
	
	<!-- Déclaration des frameworks utilisés pour ne pas avoir à changer leurs @import -->
	<chemin path="./css/frameworks/tinytypo" type="public" />
	<chemin path="./css/frameworks/bourbon" type="public" />
	<chemin path="./css/frameworks/neat" type="public" />
	<chemin path="./css/frameworks/layoutgala" type="public" />
	<!-- Déclaration de notre dossier CSS pour ne pas avoir à préfixer "css/" dans nos @import -->
	<chemin path="./css" type="public" />
	<!-- Et enfin le dossier du plugin pour SPIP -->
	<chemin path="" />
</paquet>
